@model Markt10.Areas.Customer.Controllers.LoginController
@{
    ViewData["Title"] = "Index";
}


<h1 class="Markt10" style="color:orange; text-align:center ;padding-top:4%">Markt10</h1>
<br />
<div class="border p-3 mt-4 bg-light" style="width:400px; height:400px;border-radius:15px;margin-left:32%">
    @using (Html.BeginForm())
    {
        <form method="post">
            <div class="row pb-2">
                <h2 class="text-dark" style="text-align:center">Login</h2>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="UserModel.user_name" >User Name</label>
                <input type="text" asp-for="UserModel.user_name" class="form-control" placeholder="email@example.com">
                <span asp-validation-for="UserModel.user_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="UserModel.password" >Password</label>
                <input type="password" asp-for="UserModel.password" class="form-control" placeholder="Password">
                <span asp-validation-for="UserModel.password" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn" style="width:180px;background-color:orange">Sign in</button>
            <a type="submit" class="btn btn-secondary" style="width:180px" asp-area="" asp-controller="Register" asp-action="Index">Register</a>
        </form>
    }
</div>


